{
    "compileOnSave": false,
    "typeAcquisition": {
        "enable": true
    },
    "exclude": [ "node_modules" ],
    "include": [ "types/*.d.ts" ],
    "paths": {
        "#*": [ "types/*.d.ts" ]
    },
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "emitDeclarationOnly": true,
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true
    }
}
