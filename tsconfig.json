{
    "compileOnSave": true,
    "typeAcquisition": {
        "enable": true
    },
    "exclude": ["node_modules"],
    "include": ["types"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "typeRoots": ["node_modules/@types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "lib": [
            "ESNext",
        ]
    }
}
