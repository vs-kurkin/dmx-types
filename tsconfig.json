{
    "exclude": [ "node_modules" ],
    "include": [ "types/*.d.ts" ],
    "paths": {
        "#*": [ "types/*.d.ts" ]
    },
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "emitDeclarationOnly": true,
        "module": "NodeNext",
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    }
}
